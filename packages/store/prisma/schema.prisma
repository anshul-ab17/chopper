generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Website {
  id          String    @id @default(uuid())
  url         String
  timeAdded   DateTime
  ticks       WebsiteTick[]
}

model Region {
  id          String @id @default(uuid())
  name        String
  ticks       WebsiteTick[]
}

model WebsiteTick {
  id              String @id @default(uuid())
  response_time   Int
  status          WebsiteStatus
  region_id       String
  website_id      String
  region          Region  @relation(fields: [region_id], references: [id])
  website         Website @relation(fields: [website_id], references: [id])
}

enum WebsiteStatus {
  Up
  Down
  Unknown
}

